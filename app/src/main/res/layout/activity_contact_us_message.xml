<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Custom_White_Background"
    tools:context="glipped.com.glipped.ContactUs.ContactUsMessage">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/Glipped_Logo_Orange"
        app:theme="@style/ToolBarStyle">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/contact_us_main_body"
        android:layout_below="@id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">

        <EditText
            android:id="@+id/contact_us_message_edit_text_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Name*"/>

        <EditText
            android:id="@+id/contact_us_message_edit_text_email"
            android:layout_below="@id/contact_us_message_edit_text_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Email*"/>

        <EditText
            android:id="@+id/contact_us_message_edit_text_subject"
            android:layout_below="@id/contact_us_message_edit_text_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Subject*"/>

        <EditText
            android:id="@+id/contact_us_message_edit_text_message"
            android:layout_below="@id/contact_us_message_edit_text_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:lines="5"
            android:layout_marginTop="20dp"
            android:hint="Message"/>

        <Button
            android:id="@+id/contact_us_message_button_submit"
            android:layout_below="@id/contact_us_message_edit_text_message"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Submit"/>

    </RelativeLayout>

</RelativeLayout>
